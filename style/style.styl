
@import "css3"

mootred           = #ff003f
red               = #be0000
green             = #4cbe00
blue              = #1fadc5
blue2             = #6cb7c4
pink              = #ff57a8


// size units
u   = 0.6em
u2  = 1.2em
uh  = 0.3em

// quick reset
*
  border 0
  margin 0
  line-height 1
  box-sizing border-box


body
  font-family "Myriad Pro", "Lucida Grande", "Lucida Sans Unicode"


template
  display none

a
  color blue
  text-decoration none
  cursor pointer

  &:hover
    text-decoration underline

input
  border 1px solid #c
  padding u
  border-radius 3px
  font-size 100%

header
  background-color #3
  padding u
  margin-bottom u2
  color #e
  text-transform uppercase
  letter-spacing 2px
  font-size 110%
  display none

header div, main
  max-width 800px
  margin 0 auto

header a
  font-size 80%
  margin-left 1em
  color #e
  transition color .1s

  &.is-loading
    color #5

  &.is-active
    color #9
    text-decoration none
    cursor default

navi
  margin-left 2em
  display inline-block
  width 58%



#login
  padding 2em
  background-color rgba(#0, .3)
  color #e
  margin 15% auto
  border-radius 4px
  display none

  label
    display block
    margin-bottom u2
    font-weight 100
    color #7
    text-align left

  input
    width 100%
    border none
    background-color rgba(#f, .5)
    box-shadow 0 0 5px #4 inset

    &:focus
      background-color #f

  button
    width 60%
    padding u 0
    background-color blue
    color #f
    font-size 110%
    cursor pointer
    border-radius 5em

  h3
    font-family "avenir next", "helvetica neue"
    font-weight 100
    font-size 250%
    margin-bottom u

// view visibility
#stats-page
  h3
    font-weight normal
    font-size 100%
    margin 0 0 -1.1em 3em

  canvas
    width 800px
    height 200px
    margin-bottom 25px

main
  position relative

.page
  position absolute
  top 0
  left 0
  opacity 0
  transition opacity .1s
  display none
  width 100%
  z-index -1

  &.is-active
    opacity 1
    z-index 1

.is-not-logged
  background url(../img/login.jpg)
  background-size cover
  text-align center

  #login
    display inline-block

.is-logged
  background-image none

  header, .page
    display block

  #login
    display none


// bars
#bars
  a
    display block
    padding uh

    > *
      display inline-block
      vertical-align middle

    &:hover
      background-color #f9
      color #3

  em
    width 18%
    white-space nowrap
    padding-right u
    font-size 90%
    font-style normal

  span
    width 80%

  strong
    height 4px
    background-color #7
    display block
    border-radius 4px


#user-page
  margin-top u2

  img
    margin-right u2
    border-radius 4px

  div
    display inline-block
    max-width 530px
    vertical-align top

  h1
    font-weight normal

  .meta
    margin-bottom u
    color #7
    margin uh 0 u

    span
      margin 0 uh
      color #c

  .desc
    color #5
    font-size 120%
    line-height 1.2

// search
#search
  display inline-block
  position relative

  input
    padding .2em 1em
    border-radius 3em
    font-size 90%
    background-color #d
    transition background-color .4s

    &:focus
      outline none
      background-color #f

  &.is-loading
    opacity .5
    transition opacity .2s

#results
  position absolute
  top 110%
  left 0
  background-color #f
  width 100%
  box-shadow 0 0 6px #c
  border-radius 4px
  display none
  z-index 9

  a
    font-size 80%
    color #3
    text-transform none
    letter-spacing 0
    display block
    margin .5em
    text-decoration none

    &:hover
      background-color blue
      color #f

    > *
      display inline-block
      vertical-align middle
  img
    width 2.4em
    margin-right uh

  span
    margin-top uh
